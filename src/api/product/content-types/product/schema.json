{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "uid": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 1
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "minLength": 3
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "sale_price": {
      "type": "decimal",
      "min": 0
    },
    "label": {
      "type": "string",
      "required": false
    },
    "rate": {
      "type": "integer",
      "required": true,
      "min": 1,
      "unique": false
    },
    "reviews": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "is_offer": {
      "type": "boolean",
      "required": true
    }
  }
}
